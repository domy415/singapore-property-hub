{
  "name": "singapore-property-hub",
  "version": "1.0.2",
  "description": "Singapore's premier property portal for condominiums, landed properties, and commercial shophouses",
  "scripts": {
    "dev": "next dev",
    "build": "cross-env NEXT_PHASE=phase-production-build next build",
    "build:local": "rd /s /q .next 2>nul & cross-env NEXT_PHASE=phase-production-build next build",
    "build:local:unix": "rm -rf .next && NEXT_PHASE=phase-production-build next build",
    "build:analyze": "ANALYZE=true prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "content:generate": "node scripts/content-generator.js",
    "scraper:run": "node scripts/property-scraper.js",
    "perf:audit": "npm run build && npm run start & sleep 10 && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html && pkill -f 'next start'",
    "perf:test": "node scripts/performance-test.js"
  },
  "dependencies": {
    "@prisma/client": "5.16.2",
    "@types/marked": "^5.0.2",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "@vercel/analytics": "1.3.1",
    "axios": "1.7.2",
    "cheerio": "1.0.0-rc.12",
    "dotenv": "^17.2.1",
    "marked": "^16.2.0",
    "next": "14.2.5",
    "next-auth": "4.24.7",
    "next-seo": "6.5.0",
    "node-cron": "3.0.3",
    "nodemailer": "^6.9.14",
    "openai": "4.52.7",
    "prisma": "5.16.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.52.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "typescript": "5.5.4",
    "unified": "^11.0.5",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node-cron": "3.0.11",
    "@types/nodemailer": "^6.4.19",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "cross-env": "^10.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.31",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.20.5",
    "web-vitals": "^4.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
